<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:jaxws="http://cxf.apache.org/jaxws"
       xsi:schemaLocation="http://cxf.apache.org/jaxws
       http://cxf.apache.org/schemas/jaxws.xsd http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-lazy-init="true">

    <!-- 引入CXF Bean定义如下,早期的版本中使用 -->
    <!--<import resource="classpath:META-INF/cxf/cxf.xml" />
    <import resource="classpath:META-INF/cxf/cxf-extension-soap.xml" />
    <import resource="classpath:META-INF/cxf/cxf-servlet.xml" />-->
    <!--发布webservice-->
    <!-- WebService的实现Bean定义 -->
    <!--web.xml配置了webservice的访问路径/server/*，那么/server/web-publish?wsdl就是该webservice的访问路径-->
    <bean id="webserviceServer" class="com.web.cxf.webservice.impl.CXFWebServiceImpl" />
    <!-- jax-ws endpoint定义  -->
    <jaxws:endpoint id="myService"
                    implementor="#webserviceServer"  address="/helloServices" >
    </jaxws:endpoint>
    <!--发布webservice-->
</beans>
